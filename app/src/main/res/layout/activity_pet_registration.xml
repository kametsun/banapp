<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B978E"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPetRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/pet_registration"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPetNameInput"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_style"
        android:hint="@string/et_pet_name_hint"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btPetSave"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:backgroundTint="#DF5DA8"
        android:text="@string/bt_create_pet"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
